{
  "install": "bash glitch/install.sh",
  "start": "bash glitch/start.sh",
  "watch": {
    "install": {
      "include": [
        "^glitch/env\\.sh$",
        "^glitch/install\\.sh$"
      ]
    },
    "restart": {
      "include": [
        "^glitch/env\\.sh$",
        "^glitch/start\\.sh$",
        "^\\.env$",
        "^Cargo.*",
        "^src/.*$",
        "^templates/.*$"
      ]
    },
    "throttle": 5000
  }
}